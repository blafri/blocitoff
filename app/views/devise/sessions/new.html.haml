.container-fluid
  .row
    = image_tag("blocitoff-black.png", class: 'main-logo')
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: true }) do |f|
      %h2.text-center Log In
      #form-messages
      .form-group
        = f.email_field :email, placeholder: "Email Address", class: "form-control"
      .form-group
        = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'
      - if devise_mapping.rememberable?
        .checkbox
          = f.label :remember_me do
            = f.check_box :remember_me
            Remember me
      .actions
        = f.submit "Log In", class: 'btn btn-success btn-block'
    .signup-extra-links.text-center
      = render "devise/shared/links"
