- flash.now[:error] = ("There was a problem sending your reset password.") if devise_error_messages?
.container-fluid
  .row
    = image_tag("blocitoff-black.png", class: 'main-logo')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      %h2.text-center Forgot your password?
      %p.alert.alert-info
        Enter the email address you used to sign up in the field below and we will send you an email with instructions on how to reset your password.
      #form-messages
        = devise_error_messages!
      = form_group_tag(resource.errors[:email]) do
        = f.email_field :email, placeholder: 'Email Address', class: 'form-control'
      .actions
        = f.submit "Send reset password instructions", class: 'btn btn-success btn-block'
    .signup-extra-links.text-center
      = render "devise/shared/links"
